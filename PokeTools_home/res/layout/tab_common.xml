<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/button_common_species"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_common_species"
        />
    <Button
        android:id="@+id/button_common_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_common_type"
        />
    <Button
        android:id="@+id/button_common_move"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_common_move"
        />
    <Button
        android:id="@+id/button_common_ability"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_common_ability"
        />
    <Button
        android:id="@+id/button_common_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_common_item"
        />

</LinearLayout>